{
  "version": 2,
  "builds": [
    {
      "src": "streamlit_app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "streamlit_app.py"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "OLLAMA_URL": "@ollama_url",
    "HUGGINGFACE_TOKEN": "@huggingface_token",
    "SPEECH_RECOGNITION_ENABLED": "true",
    "TTS_ENABLED": "true",
    "WEB_SEARCH_ENABLED": "true",
    "DEBUG_MODE": "false"
  }
} 